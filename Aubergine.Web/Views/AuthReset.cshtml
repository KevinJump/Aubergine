@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "AuthPages.cshtml";
}
@{ 
    var resetGuid = Request.QueryString["resetGUID"];

    if (string.IsNullOrWhiteSpace(resetGuid))
    {
        @Html.Action("ForgotPassword", "Authentication", new { area = "AubergineAuth" })
    }
    else
    {
        @Html.Action("ResetPassword", "Authentication", new { area = "AubergineAuth" })
    }
}
