@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = "Forums.cshtml";
}

@Html.Action("ListPosts", "Forums", new { area = "AubergineForums", contentKey = Model.Content.GetKey() })

@if (Members.IsLoggedIn())
{
    @Html.Action("AddPost", "Forums", new {
    area = "AubergineForums",
    contentKey = Model.Content.GetKey(),
    showTitle = true })
}