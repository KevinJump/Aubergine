@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = "Forums.cshtml";
}

@* the fun starts here *@

@{ 
    var key = HttpContext.Current.Items["postKey"];

    @Html.Action("ShowThread", "Forums", new { area = "AubergineForums",
        postKey = key })
}


@if (Members.IsLoggedIn())
{
    @Html.Action("AddPost", "Forums",
        new {
            area = "AubergineForums",
            contentKey = Model.Content.GetKey(),
            parentKey = key,
            ShowTitle = false 
        })
}